<div class="container py-5">
    <div class="row">
        <div class="col-md-8">
            <div class="card py-4 px-3">
                <h3 class="text-center mb-4">{{data.title}}</h3>
                <p class="lead">{{{data.description}}}</p>
                <p class="m-0">Posted by -<a class="btn"
                        href="/userContent/{{data.user._id}}">{{data.user.displayName}}</a></p>
                <p>Posted on - {{formatDate data.createdAt 'Do MMMM YYYY'}}</p>

                {{!-- <div>
                    <a class="mr-2 btn btn-warning" href="/edit/{{data._id}}" role="button"><i
                            class="fas fa-edit"></i></a>
                {{!-- <form class="d-inline" action="/story/{{data._id}}?_method=DELETE" method="POST">
                        <input type="hidden" name="_method" value="DELETE">
                        <button class="btn btn-danger" role="button"><i class="fas fa-trash"></i></button>
                    </form>
                </div> --}}

                <div>
                    {{{editIcon data.user user data._id}}}
                </div>
                <div class="mt-3">
                    <a class="btn btn-primary" href="/newsfeed"><i class="px-2 fas fa-arrow-circle-left"></i> Go
                        Back</a>
                </div>
            </div>

            {{#if data.commentAllowance}}
            <div class="card my-4">
                <div class="py-3 px-3">
                    <h4 class="d-inline">Comments <i class="fas fa-comments pl-2"></i></h4>
                    {{!-- <a href="/comments/add/{{data._id}}" class="float-right btn btn-success">Leave a comment</a> --}}
                    <a class="float-right btn btn-success" data-toggle="collapse" href="#collapseExample" role="button"
                        aria-expanded="false" aria-controls="collapseExample">
                        Leave a comment <i class="fas fa-paper-plane pl-2"></i>
                    </a>
                </div>
                <div class="collapse" id="collapseExample">
                    <div class="card card-body mx-3 bl">
                        {{!-- Anim pariatur cliche reprehenderit, enim eiusmod high life accusamus terry richardson ad
                        squid. Nihil anim keffiyeh helvetica, craft beer labore wes anderson cred nesciunt sapiente
                        ea proident. --}}
                        <div class="py-2">
                            <div class="row">
                                <div class="col-md-12">
                                    <h5 class="text-center">Add Comment to {{data.title}}</h5>
                                    <form action="/comments/{{data._id}}" method="POST">
                                        {{!-- <div class="form-group">
                                            <label for="exampleInputEmail1">Comment</label>
                                            <input type="text" class="form-control" name="commentBody"
                                                id="exampleInputEmail1" aria-describedby="emailHelp"
                                                placeholder="Comment">
                                        </div> --}}
                                        <div class="form-group">
                                            {{!-- <label for="exampleFormControlTextarea1">Example textarea</label> --}}
                                            <textarea class="form-control controls" placeholder="Write a new comment" name="commentBody" id="exampleFormControlTextarea1"
                                                rows="3"></textarea>
                                        </div>
                                        <button type="submit" class="btn btn-primary">Comment <i class="far fa-comment pl-2"></i></button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <hr>
                {{#each data.comments}}
                <div class="px-3">
                    <b><i class="fas fa-user pr-2"></i>{{commentingUser}}</b>
                    <p class="my-2">{{commentBody}}</p>
                    <p>Posted on - {{formatDate commentDate 'Do MMMM YYYY' }}</p>
                    <hr>
                </div>
                {{else}}

                {{/each}}
            </div>
            {{else}}
            <div class="card my-4 p-4">
                <h5 class="m-0">Comments are off for this post</h5>
            </div>

            {{/if}}
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="d-flex justify-content-center flex-column align-items-center pt-4 pb-2">
                    <img src="{{data.user.image}}" alt="" class="authorr-img">
                    <hr class="w-100">
                    <h6><a class="btn btn-light" href="/userContent/{{data.user.id}}">More Stories
                            {{data.user.firstName}}</a></h6>
                </div>
            </div>
        </div>
    </div>
</div>