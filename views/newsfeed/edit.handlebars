<h3 class="text-center p-4">
  Edit {{data.title}}
</h3>
<div class="row">
  <div class="col-md-8 offset-md-2">
    <form  action="/stories/{{data._id}}?_method=PUT" method="POST">
    <input type="hidden" name="_method" value="PUT">
  <div class="form-group">
    <label for="exampleInputEmail1">Story title</label>
    <input type="text" class="form-control" name="title" value={{data.title}}  id="exampleInputEmail1"  placeholder="Story Title">
  </div>
  <div class="form-group">
    <label for="exampleFormControlSelect1">Story Status</label>
    <select class="form-control selectpicker" name="status" id="exampleFormControlSelect1">
      <option>Public</option>
      <option>Private</option>
    </select>
  </div>
  <div class="form-check">
  <input class="form-check-input" type="checkbox" value="true" checked name="commentAllow" id="defaultCheck1">
  <label class="form-check-label" for="defaultCheck1">
    Comment Allowance
  </label>
</div>
   <div class="form-group">
    <label for="body">Story</label>
    <textarea class="form-control"  id="body" name="description" rows="3" placeholder="Story">{{data.description}}</textarea>
  </div>
  <button type="submit" class="btn btn-primary btn-block">Submit</button>
</form>
  </div>
</div>