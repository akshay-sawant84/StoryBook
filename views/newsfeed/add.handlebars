<div class="pt-3 pb-5">
  <div>
    {{#each errors}}
    <div class="alert alert-danger">{{text}}</div>
    {{else}}

    {{/each}}
  </div>


  <h3 class="text-center p-4">
    Add Story
  </h3>
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <form action="/stories" method="POST">
        <div class="form-group">
          <label for="exampleInputEmail1">Story title</label>
          <input type="text" class="form-control" name="title" id="exampleInputEmail1" placeholder="Story Title">
        </div>
        <div class="form-group">
          <label for="exampleFormControlSelect1">Story Status</label>
          <select class="form-control selectpicker" name="status" id="exampleFormControlSelect1">
            <option>Public</option>
            <option>Private</option>
          </select>
        </div>
        <div class="form-check my-3">
          <input class="form-check-input" type="checkbox" checked name="commentAllow" id="defaultCheck1">
          <label class="form-check-label" for="defaultCheck1">
            Comment Allowance
          </label>
        </div>
        <div class="form-group">
          <label for="body">Tell us your Story</label>
          <textarea class="form-control" id="body" name="description"></textarea>
        </div>
        <button type="submit" class="btn btn-primary btn-block">Submit</button>
        <a class="btn btn-warning btn-block" href="/dashboard">Cancel</a>
      </form>
    </div>
  </div>
</div>