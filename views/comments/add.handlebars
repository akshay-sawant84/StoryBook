<div class="py-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h3 class="text-center">Add Comment to {{data.title}}</h3>
            <form action="/comments/{{data._id}}" method="POST">
                <div class="form-group">
                    <label for="exampleInputEmail1">Comment</label>
                    <input type="text" class="form-control" name="commentBody" id="exampleInputEmail1" aria-describedby="emailHelp"
                        placeholder="Comment">
                </div>
                <button type="submit" class="btn btn-primary btn-block">Submit</button>
            </form>
        </div>
    </div>
</div>